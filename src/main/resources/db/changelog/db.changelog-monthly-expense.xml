<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-monthly-expense-table" author="Matvej">
        <createTable tableName="monthly_expense">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="year" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="month" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="total_amount" type="numeric(12, 2)">
                <constraints nullable="false"/>
            </column>

            <column name="person_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_person_id"
                             referencedColumnNames="id" referencedTableName="person"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>